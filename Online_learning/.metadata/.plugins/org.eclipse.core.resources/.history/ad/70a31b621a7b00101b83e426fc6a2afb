package com.example.assessment_service.model;

import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import lombok.Data;

package com.example.assessment_service.entity;

import jakarta.persistence.*;
import lombok.Data;
import java.time.LocalDateTime;

@Entity
@Data
public class Assessment {
    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    private String title;        // Quiz 1 / Assignment 1
    private String type;         // QUIZ / ASSIGNMENT
    private Long courseId;       // Linked to Course
    private Long teacherId;      // Created by Teacher
    private LocalDateTime dueDate;
}

